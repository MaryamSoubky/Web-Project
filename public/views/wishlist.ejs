            <button type="submit">Add To Cart</button>
        </form>
    </td>
        <td><img src="/<%= item.bookId.bookCover %>" alt=""></td> <!--WWWWWWAAAAAAARRRRRRNNNNNNIIIIIINNNNNNGGGGGGG-->
        <td><%= item.bookId.bookTitle %></td>
        <td>$<%= item.bookId.bookPrice %></td>
