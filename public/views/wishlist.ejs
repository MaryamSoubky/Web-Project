    </tr>
</thead>
<tbody>
    <% if(wishlist && wishlist.items.length > 0) { %>
        <% wishlist.items.forEach(item => { %>
    <tr>
        <td>
            <form action="/cart" class="secretForm" method="POST">
            <input type ="hidden" name="userId" value="6679bdafae31fc98ac456aee">
