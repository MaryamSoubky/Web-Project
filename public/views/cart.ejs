    <title>Bookly</title>
<head>

</head>

<body>

     <!--Two headers -->

    <!--First header -->
    <header class="header">
        <div class="header-1">
        
        <a href="#" class="logo"> <i class="fas fa-book"></i> bookly</a>
        
        <form action="" class="search-form">
        <input type="search" name="" placeholder="search here..." id="search-box">
        <label for="search-box" class="fas fa-search"></label>
        
        </form>
        
        <div class="icons">
        <div id="search-btn" class="fas fa-search"></div>
        <a href="/wishlist" class="fas fa-heart"></a>
        <a href="/cart" class="fas fa-shopping-cart"></a>
        <a href="userpro.html" class="fas fa-cog"></a>
        <!--<div id="logout-btn" class="fas fa-sign-out-alt"></div>-->
        </div>
        
        </div>
        
        <!--Second header -->
        
        <div class="header-2">
            <nav class="nav">
        
                <div class="nav-menu">
                        <a href="#"class="link active">Home</a>
                        <a href="/shopPage"class="link">Shop</a>
                        <a href="#"class="link">About</a>
                        <a href="#"class="link">contact us</a>
                </div>
        
            </nav>
        </div>
        
            </header>

    <!-- Creating a banner -->

    <div id="banner">
        <h2>#thankful</h2>
        <p>We appreciate your continued support. And we hope you come again!</p>
        </div>

    <!-- Creating a table for the amount of books the user has bought -->

    <div id="cart">
<table width="100%">
<thead>
    <tr>
        <td>Book Cover</td>
        <td>Book</td>
        <td>Price</td>
        <td>Quantity</td>
        <td>Subtotal</td>
        <td>Remove</td>
    </tr>
</thead>
<tbody>
    <% if(cart && cart.items.length > 0) { %>
        <% cart.items.forEach(item => { %>
    <tr>
        <td><img src="/<%= item.bookId.bookCover %>" alt=""></td> <!--WWWWWWAAAAAAARRRRRRNNNNNNIIIIIINNNNNNGGGGGGG-->
        <td><%= item.bookId.bookTitle %></td>
        <td>$<%= item.bookId.bookPrice %></td>
        <td><%= item.quantity %></td>
        <td>$<%= item.bookId.bookPrice * item.quantity %></td>
        <td><a href="#"><button class="delete-item-btn"><i class="fas fa-times-circle"></i></button></td>
    </tr>
    <% }) %>
    <% }%>
</tbody>

</table>

</div>

<!-- Cart add (total prices calculated for the items added inside the cart) -->

<div id="cart-add">
<div id="subtotal">

    <h3>Cart Totals</h3>
    <table>
<tr>
<td>Cart Subtotal</td>
<td>$ <%= cart ? cart.items.reduce((total,item) => total + item.bookId.bookPrice * item.quantity,0) : 0%></td>

</tr>
<tr>
<td>Shipping</td>
<td>Free</td>
</tr>

<tr>
<td><strong>Total</strong></td>
<td><strong>$ <%= cart ? cart.items.reduce((total,item) => total + item.bookId.bookPrice * item.quantity,0) : 0%></strong></td>
</tr>



</table>

<button class="normal">Proceed to checkout</button>


</div>

</div>

